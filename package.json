{
  "name": "basic-nodejs-template",
  "version": "0.0.1",
  "description": "A basic template for nodejs applications",
  "main": "src/index.ts",
  "repository": "git@github.com:mkny/basic-nodejs-template.git",
  "author": "Marcony Neves <marconyneves@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.json src",
    "test": "jest --watch --coverage",
    "test:ci": "jest --ci --silent --coverage",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=13",
    "npm": ">=7"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pretty-quick --staged",
      "yarn lint --fix",
      "yarn test:ci --coverage=false --passWithNoTests --findRelatedTests"
    ]
  }
}
